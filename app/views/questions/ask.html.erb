<div class="container">

  <h1>Stupid Coaching</h1>
<p>Ask your coach anything</p>

  <form action="/answer" method="post" class="form-inline">
    <div class="form-group">
       <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="text" name="question" placeholder="write your question">
    </div>
    <button type="submit" class="btn-primary">Submit</button>
  </form>

</div>
